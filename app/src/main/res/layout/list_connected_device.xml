<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorListView">

    <TextView
        android:id="@+id/tvConnectedDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/connected_devices_list_item_text_margin"
        android:layout_marginStart="@dimen/connected_devices_list_item_text_margin"
        android:layout_marginTop="@dimen/double_space_vertical_margin"
        android:layout_marginBottom="@dimen/double_space_vertical_margin"
        android:layout_gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorTextPrimaryInverse"/>

</LinearLayout>