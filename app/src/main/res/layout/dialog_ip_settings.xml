<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingTop="20dp">

    <EditText
        android:layout_width="@dimen/text_ip_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_ip_margin"
        android:layout_marginRight="@dimen/text_ip_margin"
        android:layout_weight="1"
        android:background="@color/colorTextViewBackground"
        android:textColor="@color/colorTextPrimaryInverse"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        android:id="@+id/editIP1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_init_dot"
        android:textColor="@color/colorTextPrimaryInverse"/>

    <EditText
        android:layout_width="@dimen/text_ip_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_ip_margin"
        android:layout_marginRight="@dimen/text_ip_margin"
        android:layout_weight="1"
        android:background="@color/colorTextViewBackground"
        android:textColor="@color/colorTextPrimaryInverse"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        android:id="@+id/editIP2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_init_dot"
        android:textColor="@color/colorTextPrimaryInverse"/>

    <EditText
        android:layout_width="@dimen/text_ip_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_ip_margin"
        android:layout_marginRight="@dimen/text_ip_margin"
        android:layout_weight="1"
        android:background="@color/colorTextViewBackground"
        android:textColor="@color/colorTextPrimaryInverse"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        android:id="@+id/editIP3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_init_dot"
        android:textColor="@color/colorTextPrimaryInverse"/>

    <EditText
        android:layout_width="@dimen/text_ip_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_ip_margin"
        android:layout_marginRight="@dimen/text_ip_margin"
        android:layout_weight="1"
        android:background="@color/colorTextViewBackground"
        android:textColor="@color/colorTextPrimaryInverse"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        android:id="@+id/editIP4"/>

</LinearLayout>