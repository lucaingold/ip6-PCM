<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/column_tesla_login_top_margin"
        android:layout_marginLeft="@dimen/column_tesla_login_side_margin"
        android:layout_marginRight="@dimen/column_tesla_login_side_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/text_tesla_login"
            android:layout_weight="1"
            android:gravity="fill_vertical"
            android:text="@string/text_login_username"
            android:textColor="@color/colorTextPrimary"
            android:textAppearance="?android:attr/textAppearance"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_tesla_login"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="2.5"
            android:padding="@dimen/text_tesla_login_padding"
            android:background="@color/colorTextViewBackground"
            android:textColor="@color/colorTextPrimaryInverse"
            android:layout_gravity="start"
            android:id="@+id/edit_login_username"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/column_tesla_login_top_margin"
        android:layout_marginLeft="@dimen/column_tesla_login_side_margin"
        android:layout_marginRight="@dimen/column_tesla_login_side_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/text_tesla_login"
            android:layout_weight="1"
            android:gravity="fill_vertical"
            android:text="@string/text_login_password"
            android:textColor="@color/colorTextPrimary"
            android:textAppearance="?android:attr/textAppearance"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_tesla_login"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="2.5"
            android:padding="@dimen/text_tesla_login_padding"
            android:background="@color/colorTextViewBackground"
            android:textColor="@color/colorTextPrimaryInverse"
            android:layout_gravity="start"
            android:inputType="textPassword"
            android:id="@+id/edit_login_password"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_continue_top_margin"
        android:drawableRight="@drawable/forward_icon"
        android:drawablePadding="@dimen/button_connect_tesla_space"
        android:text="@string/button_connect_tesla"
        android:layout_gravity="center"
        android:id="@+id/button_connect_tesla"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorTextPrimary"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/text_login_status"/>

</LinearLayout>